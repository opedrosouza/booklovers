<%= form_with model: @book, multipart: true, local: true, remote: false do |f| %>
  <div class="form-group">
    <%= f.label :title, 'Título' %>
    <%= f.text_field :title, placeholder: 'Ex: Game of Thrones', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description, 'Descricão' %>
    <%= f.text_area :description, placeholder: 'Descricão', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :author_name, 'Nome do Autor' %>
    <%= f.text_field :author_name, placeholder: 'Ex: Stephen King', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :category_id, 'Selecione a categoria' %>
    <%= f.select :category_id, @categories, { prompt: 'Selecione a categoria' }, class: 'form-control' %>
  </div>
  <div class="form-group">
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="inputGroupFileAddon01">Capa do livro</span>
      </div>
      <div class="custom-file">
        <%= f.file_field :cover, class: 'custom-file-input', id: 'inputGroupFile01' %>
        <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
      </div>
    </div>    
  </div>
  <div class="form-group">
    <%= f.submit "Salvar", class: 'btn btn-block btn-success shadow' %>
  </div>
<% end %>