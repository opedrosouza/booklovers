<section class="auth my-5">
  <div class="container">
    <div class="row d-flex justify-content-center align-items-center">
      <div class="col-12 col-md-8 col-lg-6">
        <div class="card shadow">
          <div class="card-body">
            <h5 class="card-title mb-4 text-center">Esqueceu sua senha?</h5>
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <%= render "admins/shared/error_messages", resource: resource %>

              <div class="form-group">
                <%= f.label :email %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Ex. pedro@mail.com', class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= f.submit "Enviar", class: 'btn btn-success btn-block' %>
              </div>
            <% end %>
          </div>
          <div class="card-footer">
            <%= render "admins/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>